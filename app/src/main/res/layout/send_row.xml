<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textViewSendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSendDate"
        android:layout_alignParentStart="true"
        android:textSize="12dp"
        android:text="00:00 AM"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textViewSendDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewMsgSendBody"
        android:layout_alignParentStart="true"
        android:textSize="12dp"

        android:text="01/Jan/2018"
        android:textColor="@android:color/darker_gray" />


    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/textViewMsgSendBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageViewCallPic"
        android:layout_marginEnd="12dp"
        android:padding="10dp"
        android:text="Hello BubbleTextVew"
        android:textColor="@android:color/white"
        app:angle="8dp"
        app:arrowCenter="true"
        app:arrowHeight="10dp"
        app:arrowLocation="right"
        app:arrowPosition="14dp"
        app:arrowWidth="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:bubbleColor="@android:color/holo_orange_dark" />
</RelativeLayout>
