<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spy.vksoni.wetalk.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#AAf59836"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="7"
        >


        <TextView
    android:layout_marginTop="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            />
        <EditText

            android:layout_weight="0.5"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="18sp"
            />
        <EditText
            android:layout_weight="0.5"
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"
            />
        <EditText
            android:layout_weight="0.5"
            android:id="@+id/user_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No#"
            android:textSize="18sp"
            android:inputType="phone" />

        <EditText
            android:layout_weight="0.5"
            android:textSize="17.5sp"
            android:id="@+id/user_password"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
        <Button
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#f08247"
            android:textStyle="bold"
            android:textSize="17sp"
            android:padding="10dp"
            android:background="@drawable/loginbtneffect"
            android:id="@+id/create"
            />
        <TextView
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The WeTalk is the only App which can change your life. We provide you the environment which fits you and your friends for daily important discussions."
            android:textColor="#FFFFFF"
            android:layout_marginBottom="7dp"
            />

    </LinearLayout>
</LinearLayout>
